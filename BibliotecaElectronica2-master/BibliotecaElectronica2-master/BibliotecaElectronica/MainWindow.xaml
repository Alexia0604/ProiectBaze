<Window x:Class="BibliotecaElectronica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BibliotecaElectronica"
        xmlns:view="clr-namespace:BibliotecaElectronica.View"
        xmlns:vms="clr-namespace:BibliotecaElectronica.ViewModel"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Title="MainWindow" Height="650" Width="850">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:LoginViewModel}">
                <view:LoginView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:CreateAccountViewModel}">
                <view:CreateAccountView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:CreateAccountViewModel2}">
                <view:CreateAccountView2/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:ClientViewModel}">
                <view:ClientView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:LibrarianViewModel}">
                <view:LibrarianView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:AdminViewModel}">
                <view:AdminView/>
            </DataTemplate>
        </Grid.Resources>

        <Grid>
            <Grid.RowDefinitions>
            <RowDefinition Height="30">
                
            </RowDefinition>
                
             </Grid.RowDefinitions>
        
        <Grid>
            <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                  
                    <ColumnDefinition  Width="25"/>
                </Grid.ColumnDefinitions>
            <Button x:Name="btnMinimize"
                    Content="-"
                 
                    Cursor="Hand"
                  
                    Foreground="White"
                    FontSize="12"
                    BorderThickness="0"
                    Grid.Column="1"
                    Click="btnMinimize_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#5aa8cc"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#156ab0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button" >
                            <Border Width="20" Height="20"
                              CornerRadius="11"
                                  Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
                <!--<Button x:Name="btnMaximize"
                     Content="+" 
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    Foreground="White"
                    FontSize="12"
                    BorderThickness="0"
                    Grid.Column="2"
                        Click="btnMaximize_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#f783de"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#b53f9c"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button" >
                            <Border Width="20" Height="20"
                              CornerRadius="11"
                              Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>

                            </Border>
                        </ControlTemplate>
                    </Button.Template>-->


                <!--</Button>-->
                
                <Button x:Name="btnClose"
                        Content="x"
                       
                        Cursor="Hand"
                       
                        Foreground="White"
                        FontSize="12"
                        BorderThickness="0"
                        Grid.Column="2"
                        Click="btnClose_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#b14de3"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#9a34c9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button" >
                            <Border Width="20" Height="20"
                              CornerRadius="11"
                                
                                 Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>

                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
            </Grid>
        </Grid>
        
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
