<UserControl x:Class="BibliotecaElectronica.View.AdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BibliotecaElectronica.ViewModel"
             xmlns:views="clr-namespace:BibliotecaElectronica.View"
             xmlns:vms="clr-namespace:BibliotecaElectronica.ViewModel"
             xmlns:Menu="clr-namespace:BibliotecaElectronica.Utilities"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="850">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="30">

            </RowDefinition>
            <RowDefinition Height="*">

            </RowDefinition>

        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions >
                <ColumnDefinition  Width="188" />
                <ColumnDefinition />

            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" >
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#efdaf7" Offset="0" />
                        <GradientStop Color="#efdaf7" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Grid>


        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions >

                <ColumnDefinition  Width="188" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#efdaf7" Offset="0" />
                        <GradientStop Color="#efdaf7" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <Border Grid.Column="1" >
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="white" Offset="0" />
                        <GradientStop Color="white" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <Grid Grid.Column="0">
                <StackPanel Orientation="Vertical" >

                    <RadioButton Margin="0,200,0,-20" Style="{StaticResource BtnStyle}" HorizontalAlignment="Center"
                          Command="{Binding HomeClickButtonCommand}"
                             Tag="#8228a6">

                        <StackPanel Orientation="Horizontal" >
                            <fa:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Acasă" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>



                    <RadioButton Margin="0,20,0,-20" Style="{StaticResource BtnStyle}" HorizontalAlignment="Center"
                          Command="{Binding CustomerClickButtonCommand}"
                             Tag="#8228a6">
                        <StackPanel Orientation="Horizontal" >
                            <fa:IconImage Icon="User" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Contul meu" Style="{StaticResource  menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>


                    <RadioButton Margin="0,20,0,-20" Style="{StaticResource BtnStyle}" HorizontalAlignment="Center"
                           Command="{Binding ProductsClickButtonCommand}"
                              Tag="#8228a6">
                        <StackPanel Orientation="Horizontal" >
                            <fa:IconImage Icon="Book" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Cărți" Style="{StaticResource  menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Margin="0,20,0,-20" Style="{StaticResource BtnStyle}" HorizontalAlignment="Center"
                            Command="{Binding ListReadersClickButtonCommand}"
                            Tag="#8228a6">
                        <StackPanel Orientation="Horizontal" >
                            <fa:IconImage Icon="BookReader" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Cititori" Style="{StaticResource  menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Margin="0,20,0,-20" Style="{StaticResource BtnStyle}" HorizontalAlignment="Center"
                            Command="{Binding ListLibrariansClickButtonCommand}"
                            Tag="#8228a6">
                        <StackPanel Orientation="Horizontal" >
                            <fa:IconImage Icon="UserTie" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Bibliotecari" Style="{StaticResource  menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                </StackPanel>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.Resources>
                    <DataTemplate DataType="{x:Type vms:HomeViewModel}">
                        <views:HomeView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vms:CustomerViewModel}">
                        <views:CustomerView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vms:CartiViewModel}">
                        <views:CartiView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vms:DetaliiCarteViewModel}">
                        <views:DetaliiCarteView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vms:CititoriViewModel}">
                        <views:CititoriView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vms:BibliotecariViewModel}">
                        <views:BibliotecariView/>
                    </DataTemplate>

                </Grid.Resources>

                <ContentControl Margin="10" Content="{Binding CurrentRightViewModel}"/>
            </Grid>
        </Grid>

    </Grid>
</UserControl>
